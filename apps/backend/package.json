{
    "name": "backend",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "bun run --hot --no-clear-screen src/index.ts",
        "dev:drizzle": "drizzle-kit studio --config=./drizzle.config.ts",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:drop": "drizzle-kit drop",
        "build": "bun build src/index.ts --outdir ./dist --target bun"
    },
    "dependencies": {
        "drizzle-orm": "^0.44.4",
        "hono": "^4.9.1",
        "http-status-codes": "^2.3.0",
        "pino": "^9.9.0",
        "postgres": "^3.4.7",
        "zod": "^4.0.17"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "drizzle-kit": "^0.31.4"
    },
    "imports": {
        "#web/": "./src/web/*",
        "#schemas/": "./src/db/schemas/*",
        "#utils/": "./src/utils/*"
    },
    "peerDependencies": {
        "typescript": "^5"
    }
}